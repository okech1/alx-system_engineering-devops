#!/usr/bin/env bash

# Assume the process you want to terminate is named "4-to_infinity_and_beyond"
target_process_name="4-to_infinity_and_beyond"

# Get the PID of the process
target_pid=$(pgrep -f "$target_process_name")

if [ -n "$target_pid" ]; then
  echo "Terminating the process with PID $target_pid..."
  # Send a SIGTERM signal to the process
  kill -15 "$target_pid"
else
  echo "No process found with the name '$target_process_name'."
fi
